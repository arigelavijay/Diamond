@model List<NetStock.Contract.CustomerProduct>

@{
    ViewBag.Title = "List Of Products";
}
<!--Modal Window Placeholder-->
@*<div class="modal fade in" id="coaModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">*@
<div class="modal fade in" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>


<fieldset class="form-horizontal">

    @Html.ActionLink("Add Product", "EditSupplierProduct", "MasterData", new { area = "MasterData" }, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary" })
    <!-- Display List Section -->

    <table class="table table-striped table-bordered">
        <thead style="background-color:steelblue;color:white;font-size:12px;">
            <tr>
                <th>Product Code</th>
                <th>Match Product Code</th>
                <th>Bar Code</th>
                <th>Cost Price </th>
            </tr>
        </thead>
        <tbody style="font-size:12px;">
            @if (Model != null)
            {
                foreach (NetStock.Contract.CustomerProduct item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@item.ProductCode, "EditSupplierProduct", "MasterData", new { productCode = @item.ProductCode }, new { data_modal = "", id = "btnCreate", @class = "btn btn-link" })</td>
                        <td> @item.MatchProductCode </td>
                        <td> @item.BarCode </td>
                        <td> @item.CostPrice</td>
                        <td> @Html.HiddenFor(m => @item.CustomerCode)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</fieldset>



@section Scripts {
    @Scripts.Render("~/bundles/modalform")
}
