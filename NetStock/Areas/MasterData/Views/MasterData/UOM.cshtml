@model NetStock.Contract.Lookup


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="lblHeader">Add/Edit U O M </h4>
</div>

@using (Html.BeginForm("EditUOM", "MasterData", FormMethod.Post, new { id = "frmUOM", name = "frmUOM" }))
{
    <div class="modal-body form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                <label class="col-md-2 control-label input-sm">U O M Code</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.LookupCode, new { @id = "txtCode", @class = "form-control input-sm", @maxlength = "10" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                <label class="col-md-2 control-label input-sm">Description</label>
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-sm ", @maxlength = "255" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm" data-dismiss="modal"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancel</button>
        @if (HtmlHelpers.hasRight("UOMSave"))
        {
            <button type="button" class="btn btn-primary btn-sm" onclick="btnSaveUOM();"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Save</button>
        }
    </div>
}