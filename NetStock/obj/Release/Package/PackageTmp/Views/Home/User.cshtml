@model List<NetStock.Contract.Product>
    @{
        ViewBag.Title = "User";
    }

    <link href="~/Scripts/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
    @*<div class="modal fade in" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div id='myModalContent'></div>
                </div>
            </div>
        </div>*@

    <div class="box box-solid box-default">
        <div class="box-header with-border">
            <h3 class="box-title">User Master</h3>

        </div>
        <div class="box-body">
            <fieldset class="form-horizontal">


                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="tbDetails" data-toggle="tab">Users</a>
                        </li>
                        <li class="pull-right">
                            <div class="btn-group btn-primary">
                                @*<a class="btn btn-social btn-info" href="@Url.Action("EditProduct", "MasterData", new { productCode = "NEW", barcode = "", uom = "", size = "", color = "" },null)">
                                        <i class="fa fa-cog"></i>
                                        Add Product
                                    </a>*@
                                @*@Html.ActionLink("Add Product", "EditProduct", "MasterData", new { area = "MasterData" }, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary" })*@
                                @*<a href="/MasterData/AddProduct" class="btn btn-small btn-primary" > Add Product</a>*@
                                @Html.ActionLink("Add User", "UserProfile", "Home", new { productCode = "NEW" }, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary" })

                            </div>
                        </li>
                    </ul>


                    <!-- Display List Section -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="tbDetails">

                            <table id="tblList" class="table table-striped table-hover table-bordered table-responsive setting-table">
                                <thead style="background-color:steelblue;color:white;font-size:12px;">
                                    <tr>

                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                        @*<th>Size</th>
                                        <th>Colour</th>
                                        <th>Category</th>
                                        <th>Re-Order Qty</th>
                                        <th>Location</th>*@

                                    </tr>
                                </thead>
                                <tbody style="font-size:12px;">
                                    @if (Model != null)
                                    {
                                        foreach (NetStock.Contract.Product item in Model)
                                        {
                                            <tr>
                                                <td>@Html.ActionLink(@item.BarCode, "AddProduct", "MasterData", new { area = "MasterData", productCode = @item.ProductCode, barcode = @item.BarCode, uom = @item.UOM, size = @item.Size, color = @item.Color }, new { data_modal = "", id = "btnCreate", @class = "btn btn-link" })</td>

                                                <td> @item.BarCode </td>
                                                <td> @item.UOMDescription</td>
                                               
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </fieldset>
        </div>


        <div class="box-footer">
            <div class="row  no-print">
                <div class="col-xs-12">
                    <div class="btn-group dropup">
                        <button type="button" class="btn btn-social btn-primary"><i class="fa fa-print"></i>Print</button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#"><i class="fa fa-file-pdf-o"></i>Pdf</a> </li>
                            <li><a href="#"><i class="fa fa-file-excel-o"></i>Excel</a> </li>
                            <li><a href="#"><i class="fa fa-file-word-o"></i>Word</a> </li>

                        </ul>
                    </div>
                    <a href="#" class="btn btn-social btn-info pull-right">
                        <i class="fa fa-arrow-circle-o-left"></i>
                        Back
                    </a>
                </div>
            </div>
        </div>

    </div>



    @section Scripts {

        @*<script src="~/Scripts/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
            <script src="~/Scripts/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>*@

        @*@Scripts.Render("~/bundles/modalform")*@
        @Scripts.Render("~/bundles/dataTable")


        <script type="text/javascript">
            $(document).ready(function () {
                $('#tblList').DataTable({
                    responsive: true
                });
                var table = $('#tblList').DataTable();
                $('#tblList tbody').on('click', 'tr', function () {
                    if ($(this).hasClass('selected')) {
                        $(this).removeClass('selected');
                    }
                    else {
                        table.$('tr.selected').removeClass('selected');
                        $(this).addClass('selected');
                    }
                });
            });

        </script>
    }
