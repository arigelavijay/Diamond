@model NetStock.Contract.ProductCategory
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="lblHeader">Add/Edit Product Category </h4>
</div>

@using (Html.BeginForm("EditProductCategory", "MasterData", FormMethod.Post, new { id = "frmProductCategory", name = "frmProductCategory" }))
{
    <div class="modal-body form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                <label class="col-md-3 control-label input-sm">Category Code</label>
                <div class="col-md-8">

                    @Html.TextBoxFor(m => m.CategoryCode, new { @class = "form-control input-sm", @maxlength = "50" })

                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                <label class="col-md-3 control-label input-sm">Description</label>
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-sm ", @maxlength = "250" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                <label class="col-md-3 control-label input-sm">Internal Stock</label>
                <div class="col-md-4">
                    <div class="checkbox">
                        <span onclick="checkBoxClick(this)" id="IsInternalStock_span" class="class_checkbox @(Model.IsInternalStock ? "checked" : "")"></span>
                        @Html.HiddenFor(m => m.IsInternalStock)
                    </div>


                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm" data-dismiss="modal"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancel</button>
        @if (HtmlHelpers.hasRight("ProductCategorySave"))
        {
            <button type="button" class="btn btn-primary btn-sm" onclick="btnSaveProductCategory();"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Save</button>
        }
    </div>
    <script type="text/javascript">
        function checkBoxClick(el) {
            debugger;
            var id = el.id;
            $(el).toggleClass('checked');

            var isChecked = $(el).hasClass('checked');
            var hdnId = id.split('_')[0];
            $('#' + hdnId).val(isChecked);
        }
    </script>
}

