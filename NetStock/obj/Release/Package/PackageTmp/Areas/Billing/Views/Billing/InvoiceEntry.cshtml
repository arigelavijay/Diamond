            @if (Model != null)
            {
                foreach (NetStock.Contract.InvoiceDetail item in Model.InvoiceDetails)
                {
                    <tr>
                        <td>&nbsp;&nbsp;@item.ProductDescription </td>
                        <td>@item.Quantity </td>
                        <td>@item.Price </td>
                    </tr>
                }
            }
