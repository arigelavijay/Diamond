                <div class="btn-group dropup">

                    @*the URL need to be the Datasource url*@

                    @Html.ActionLink("พิมพ์", "InvoiceReport", "Reports", new { area = "Reports", invoiceNo = Model.InvoiceNo, URL = "/NetStockDiamondReports/Diamond.CashBill" }, new { data_modal = "test", id = "btnViewReport", onclick = "PrintClick(" + Model.InvoiceNo + ")", @class = "btn btn-small btn-primary" })


