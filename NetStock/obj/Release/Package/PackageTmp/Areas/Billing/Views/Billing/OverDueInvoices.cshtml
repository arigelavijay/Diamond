@model NetStock.Contract.InvoiceHeader

@{
    ViewBag.Title = "Invoice";
}

@using (Html.BeginForm("SaveCompanyProfile", "Billing", FormMethod.Post))
{


    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Over-Due Invoices</h3>
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div>
                        <label for="txtInvoiceNo" class="col-md-2 control-label input-sm">Customer / รหัสลูกค้า</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.CustomerCode, new { @class = "form-control input-sm", @maxlength = "50" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label for="txtInvoiceNo" class="col-md-2 control-label input-sm">Date From / จากวันที่</label>
                        <div class="col-sm-2">
                            @Html.TextBoxFor(m => m.InvoiceDate, new { @Value = Model.InvoiceDate.ToString("dd/MM/yyyy"), @class = "form-control input-sm" })
                        </div>
                        <label for="txtInvoiceNo" class="col-md-2 control-label input-sm">Date To / ถึงวันที่</label>
                        <div class="col-sm-2">
                            @Html.TextBoxFor(m => m.InvoiceDate, new { @Value = Model.InvoiceDate.ToString("dd/MM/yyyy"), @class = "form-control input-sm" })

                        </div>
                    </div>
                </div>
            </fieldset>
        </div>

    </div>
    @*<a href="#" class="btn btn-primary">Save</a>*@
    <input type="submit" class="btn btn-primary" value="Search.." />
    <input type="submit" class="btn btn-default" value="Clear" />


    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Invoice No.</th>
                <th>Invoice Date</th>
                <th>รหัสลูกค้า</th>
                <th>Invoice Amount </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (NetStock.Contract.InvoiceDetail item in Model.InvoiceDetails)
                {
                    <tr>
                        <td>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" /></label>
                            </div>
                        </td>
                        <td>Model.InvoiceNo </td>
                        <td>Model.CustomerCode </td>
                        <td>Model.InvoiceAmount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

