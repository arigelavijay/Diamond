@model List<NetStock.Contract.Quotation>

@{
    ViewBag.Title = "List Of Customer Quotation";
}
@section css{
    <link href="@Url.Content("~/Content/bootstrap-datetimepicker.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/dataTables.bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/dataTables.responsive.css")" rel="stylesheet" />
}
<div class="box box-solid box-default ">
    <div class="box-header with-border">
        <h3 class="box-title">List of Customer Quotation</h3>
    </div>
    <div class="box-body">
        <fieldset class="form-horizontal">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="tbDetails" data-toggle="tab">Customer List</a>
                    </li>
                    <li class="pull-right">
                        <div class="btn-group btn-primary">
                            @if (HtmlHelpers.hasRight("CustomerTariffSave"))
                            {
                                <a class="btn btn-sm btn-primary" href="@Url.Content("~/Quotation/EditCustomerQuotation?quotationNo=NEW")" id="btnCreate"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Add Quotation</a>
                            }
                        </div>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tbDetails">
                        <table id="tblList" class="table table-striped table-hover table-bordered table-responsive setting-table">
                            <thead style="background-color: steelblue; color: white; font-size: 12px;">
                                <tr>
                                    <th>Quotation No.</th>
                                    <th>Customer Name</th>
                                    <th>Effective Date</th>
                                    <th>Expiry Date </th>
                                </tr>
                            </thead>
                            <tbody style="font-size: 12px;">
                                @if (Model != null)
                                {
                                    foreach (NetStock.Contract.Quotation item in Model)
                                    {
                                    <tr>
                                        @if (HtmlHelpers.hasRight("CustomerTariffView"))
                                        {
                                            <td>@Html.ActionLink(@item.QuotationNo, "EditCustomerQuotation", "Quotation", new { quotationNo = @item.QuotationNo }, new { id = "btnCreate" })</td>
                                        }
                                        else
                                        {
                                            <td>@item.QuotationNo</td>
                                        }
                                        <td>@item.CustomerName </td>
                                        <td>@item.EffectiveDate.ToString("dd-MM-yyyy") </td>
                                        <td>@item.ExpiryDate.ToString("dd-MM-yyyy")</td>
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="box-footer">
        <div class="row  no-print">
            <div class="col-xs-12">
                @*<div class="btn-group dropup">
                    <button type="button" class="btn btn-sm btn-primary"><i class="fa fa-print"></i>&nbsp;พิมพ์</button>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" style="padding-bottom: 2px;">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#"><i class="fa fa-file-pdf-o"></i>Pdf</a> </li>
                        <li><a href="#"><i class="fa fa-file-excel-o"></i>Excel</a> </li>
                        <li><a href="#"><i class="fa fa-file-word-o"></i>Word</a> </li>
                    </ul>
                </div>*@
                <a href="#" id="btnBack" class="btn btn-sm btn-info pull-right">
                    <i class="fa fa-arrow-circle-o-left"></i>
                    Back
                </a>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    @Scripts.Render("~/bundles/modalform")
    <script src="@Url.Content("~/Scripts/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/select2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblList').DataTable({
                responsive: true
            });
            var table = $('#tblList').DataTable();
            $('#tblList tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

            var isSaved = '@TempData["isSaved"]';
            if (isSaved == 'True') {
                ModalShow2('@TempData["resultMessage"]', "Success", "Save");
            }
            else if (isSaved == 'False') {
                ModalShow2('@TempData["resultMessage"]', "Failure", "Save");
            }
        });

    </script>
}