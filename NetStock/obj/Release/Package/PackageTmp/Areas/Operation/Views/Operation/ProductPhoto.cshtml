@model NetStock.Contract.ProductImage
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="lblHeader">Product Photo</h4>
</div>



<div class="modal-body form-horizontal">
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.Code, new { @class = "control-label input-sm col-md-2" })
            <div class="col-md-4">

                @Html.DisplayFor(m => m.Code, new { @class = "form-control input-sm" })


            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.ProductImg, new { @class = "col-md-2 control-label input-sm" })
            <div class="col-md-8">
                @{
                    if (Model != null)
                    {
                        if (Model.ProductImg != null)
                        {
                            <img id="target" style="width:150px;height:150px" src="data:image/jpeg;base64,@System.Convert.ToBase64String(Model.ProductImg)" />
                        }
                    }
                }

            </div>
        </div>
    </div>
</div>

<div class="modal-footer" id="closemodal">
    <button class="btn" data-dismiss="modal">OK</button>
</div>


