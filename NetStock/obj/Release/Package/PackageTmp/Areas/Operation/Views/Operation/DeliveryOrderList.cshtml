@model List<NetStock.Contract.OrderHeader>

@{
    ViewBag.Title = "List Of Deliver Orders";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">List Of D.O</h3>
    </div>
    <div class="panel-body">
        <fieldset class="form-horizontal">

            @Html.ActionLink("New D.O", "DeliveryOrder", "Operation", new { orderNo = "NEW" }, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary" })
            @* @Html.ActionLink("New Chart Of Account", "EditChartOfAccount", "MasterData", new { area = "MasterData" }, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary" })*@

            <div row>
                &nbsp;
            </div>
            <!-- Display List Section -->

            <table class="table table-striped table-hover table-bordered table-responsive ">
                <thead style="background-color:steelblue;color:white;font-size:12px;">
                    <tr>
                        <th>Order No.</th>
                        <th>Order Date</th>
                        <th>รหัสลูกค้า</th>
                        <th>Sale Type</th>
                    </tr>
                </thead>
                <tbody style="font-size:12px;">
                    @if (Model != null)
                    {
                        foreach (NetStock.Contract.OrderHeader item in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(@item.OrderNo, "OrderEntry", "Operation", new { orderNo = @item.OrderNo }, new { data_modal = "", id = "btnCreate", @class = "btn btn-link btn-sm" })</td>
                                <td> @item.OrderDate.ToString("dd-MM-yyyy") </td>
                                <td> @item.CustomerCode </td>
                                <td> @item.SaleType</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </fieldset>
    </div>

</div>

